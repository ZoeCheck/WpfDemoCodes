        <ProgressBar x:Name="pbMain"
                     Height="100"
                     Margin="208,120,201,0"
                     VerticalAlignment="Top"
                     Style="{DynamicResource ProgressBarStyleCircle}"
                     Maximum="360" />
        <Button Content="start"
