        xmlns:my="clr-namespace:ChatBubble">
    <Grid>
    	<StackPanel>
    		<TextBox TextWrapping="Wrap" Style="{DynamicResource TextBoxStyleChatBuuble}" HorizontalAlignment="Left" MaxWidth="200" Foreground="#FF212122" Text="一个人吃饭是怎么做才显得不寂寞？" d:LayoutOverrides="HorizontalAlignment" Margin="10,5,0,5"/>
