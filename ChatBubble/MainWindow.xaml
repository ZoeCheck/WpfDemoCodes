    		<TextBox TextWrapping="Wrap" Style="{DynamicResource TextBoxStyleFreeRectanle}" HorizontalAlignment="Left" MaxWidth="200" Foreground="#FF212122" Text="什么情况？" Margin="10,5,0,5" Background="#FFE5E5EA"/>
    		<TextBox TextWrapping="Wrap" Style="{DynamicResource TextBoxStyleFreeRectanle}" HorizontalAlignment="Right" MaxWidth="200" Foreground="#FF333333" Text="一般这个时候沉默就行了" Background="#FF00E84F" Margin="0,5,10,5"/>
    		<TextBox TextWrapping="Wrap" Style="{DynamicResource TextBoxStyleFreeRectanle}" HorizontalAlignment="Left" MaxWidth="200" Foreground="#FF212122" Text="什么情况？什么情况？什么情况？什么情况？什么情况？什么情况？什么情况？什么情况？什么情况？什么情况？" Margin="10,5,0,5" Background="#FFE5E5EA"/>
            <TextBox TextWrapping="Wrap"
                     Style="{DynamicResource TextBoxStyleFreeRectanle}"
                     HorizontalAlignment="Right"
                     MaxWidth="200"
                     Foreground="#FF333333"
                     Text="..."
                     Background="#FF00E84F"
                     Margin="0,5,10,5" />
            <my:RectangleTextBox
                                 x:Name="rectangleTextBox1" Margin="10,5,0,5" MaxWidth="200" HorizontalAlignment="Left" Text="奥斯卡级阿什顿啊是空间哈爱上萨克地方" TextWrapping="Wrap" Background="{x:Null}" BorderThickness="0" Foreground="White" />
            <TextBox Height="25.667" TextWrapping="Wrap" Text="TextBox" HorizontalAlignment="Left" Width="101.333" Style="{DynamicResource RectangleTextBoxStyle}"/>
        </StackPanel>
    </Grid>
</Window>
