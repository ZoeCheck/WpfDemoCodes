<Window x:Class="CanvasMoveDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Name="canvas"
                PreviewMouseMove="canvas_MouseMove"
                PreviewMouseDown="canvas_MouseDown"
                PreviewMouseUp="canvas_MouseUp">

            <Ellipse Fill="GreenYellow"
                     Width="50"
                     Height="50"
                     Canvas.Left="10"
                     Canvas.Top="10" />

            <Rectangle Fill="Orange"
                       Width="100"
                       Height="40"
                       Canvas.Left="100"
                       Canvas.Top="50" />

            <Button Canvas.Left="100"
                    Canvas.Top="10"
                    Content="A" />

            <TextBox Canvas.Left="130"
                     Canvas.Top="20"
                     Width="100"
                     Text="Mgen" />

        </Canvas>
    </Grid>
</Window>
